source "https://rubygems.org"

# Include this file in your Gemfile by calling eval File.read('sdkdocs-template/bundler/Gemfile.defaults')

gem 'rake'
gem 'jekyll'
gem 'link-checker'

# Avoid polling for changes
gem 'wdm', '>= 0.1.0' if Gem.win_platform?

group :jekyll_plugins do
  gem 'jekyll-redirect-from'
  gem 'jekyll-git_metadata', :git => 'https://github.com/citizenmatt/jekyll-git_metadata.git', :branch => 'fix_windows'
end
